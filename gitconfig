[user]
	name = Robin Tweedie

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = red
	untracked = cyan

[alias]
	co = checkout

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space
	excludesfile = ~/.gitignore

[push]
	default = current
