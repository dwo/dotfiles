[user]
	name = Robin Tweedie
	email = ${GIT_EMAIL}
	signingkey = ${GIT_SIGNINGKEY}

[color]
	branch = auto
	diff = auto
	status = auto

[core]
	attributesfile = ~/.gitattributes
	editor = vim
	excludesfile = ~/.gitignore
	whitespace=fix,-indent-with-non-tab,trailing-space

[push]
	default = current

[commit]
	gpgSign = true
